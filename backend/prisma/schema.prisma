// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  name       String
  email      String       @unique
  TaskStatus TaskStatus[]
}

model Task {
  id         Int          @id @default(autoincrement())
  title      String
  content    String?
  TaskStatus TaskStatus[]
}

model TaskStatus {
  id              Int           @id @default(autoincrement())
  user            User          @relation(fields: [userId], references: [id])
  userId          Int
  task            Task          @relation(fields: [taskId], references: [id])
  taskId          Int
  taskStatusMst   TaskStatusMst @relation(fields: [taskStatusMstId], references: [id])
  taskStatusMstId Int
}

model TaskStatusMst {
  id         Int          @id @default(autoincrement())
  name       String
  TaskStatus TaskStatus[]
}
