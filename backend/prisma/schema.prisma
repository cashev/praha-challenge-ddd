// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Participant {
  id         String            @id
  name       String
  email      String            @unique
  TaskStatus TaskStatus[]
  pair       Pair_Participant?
  team       Team_Participant?
}

model Task {
  id         String       @id
  title      String
  content    String
  TaskStatus TaskStatus[]
}

model TaskStatus {
  id            String      @id
  Participant   Participant @relation(fields: [participantId], references: [id])
  participantId String
  task          Task        @relation(fields: [taskId], references: [id])
  taskId        String
  status        String

  @@unique([participantId, taskId])
}

model Pair_Participant {
  pair          Pair        @relation(fields: [pairId], references: [id])
  pairId        String
  participant   Participant @relation(fields: [participantId], references: [id])
  participantId String      @unique
  status        String

  @@unique([pairId, participantId])
}

model Pair {
  id           String             @id
  name         String
  participants Pair_Participant[]
  team         Team_Pair[]
}

model Team_Pair {
  team   Team   @relation(fields: [teamId], references: [id])
  teamId String
  pair   Pair   @relation(fields: [pairId], references: [id])
  pairId String @unique

  @@unique([teamId, pairId])
}

model Team_Participant {
  team          Team        @relation(fields: [teamId], references: [id])
  teamId        String
  participant   Participant @relation(fields: [participantId], references: [id])
  participantId String      @unique

  @@unique([teamId, participantId])
}

model Team {
  id           String             @id
  name         String
  pairs        Team_Pair[]
  participants Team_Participant[]
}
